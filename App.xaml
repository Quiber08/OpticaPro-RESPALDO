<Application
    x:Class="OpticaPro.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpticaPro">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="OpticsBrandColor">#0078D4</Color>
            <Color x:Key="OpticsAccentColor">#50E6FF</Color>

            <SolidColorBrush x:Key="OpticsBrandBrush" Color="{StaticResource OpticsBrandColor}" />

            <LinearGradientBrush x:Key="OpticsGradientBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource OpticsBrandColor}" Offset="0.0"/>
                <GradientStop Color="{StaticResource OpticsAccentColor}" Offset="1.0"/>
            </LinearGradientBrush>

            <Style x:Key="PageTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{ThemeResource SystemControlPageTextBaseHighBrush}"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>