<Page
    x:Class="OpticaPro.Views.SupportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:OpticaPro.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,1,0" Padding="24">
            <StackPanel Spacing="24">
                <StackPanel Spacing="8">
                    <TextBlock Text="Soporte Técnico" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock Text="Contacta con el administrador." Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <Border Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PersonPicture Initials="AD" DisplayName="Admin" Width="40"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Administrador" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Ellipse Width="8" Height="8" Fill="LimeGreen"/>
                                    <TextBlock Text="En línea" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <MenuFlyoutSeparator/>
                        <TextBlock Text="Horario de atención:" FontWeight="SemiBold" FontSize="12"/>
                        <TextBlock Text="Lun - Vie: 9:00 - 18:00" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <Border Background="#252525" CornerRadius="8" Padding="16">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon x:Name="IconLicenseStatus" Glyph="&#xE776;" Foreground="LimeGreen"/>
                            <TextBlock x:Name="TxtLicenseType" Text="Cargando licencia..." Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>

                        <TextBlock x:Name="TxtLicenseExpiry" Text="Consultando vigencia..." Foreground="LightGray" FontSize="12"/>

                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                            <Button Content="Actualizar" Click="RefreshLicense_Click" FontSize="11" Padding="8,4" Background="#404040" Foreground="White" BorderThickness="0"/>
                            <Button Content="Nueva Licencia" Click="EnterNewLicense_Click" FontSize="11" Padding="8,4" Background="{ThemeResource SystemAccentColor}" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Padding="24,16" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE8F2;" FontSize="20" Foreground="{ThemeResource SystemAccentColor}"/>
                    <TextBlock Text="Chat en vivo con Soporte" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>

            <ListView x:Name="ChatList" Grid.Row="1" SelectionMode="None" Padding="24">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0,4"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:ChatMessage">
                        <Grid HorizontalAlignment="{x:Bind HorizontalAlign}">
                            <Border Background="{x:Bind BubbleColor}" CornerRadius="12" Padding="12,8" MaxWidth="400">
                                <StackPanel>
                                    <TextBlock Text="{x:Bind Message}" TextWrapping="Wrap" Foreground="{x:Bind TextColor}"/>
                                    <TextBlock Text="{x:Bind Time}" FontSize="10" Foreground="{x:Bind TimeColor}" HorizontalAlignment="Right" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="2" Padding="24" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,1,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtMessage" PlaceholderText="Escribe tu mensaje aquí..." KeyDown="TxtMessage_KeyDown"/>

                <Button Grid.Column="1" Click="SendMessage_Click" Style="{StaticResource AccentButtonStyle}" Margin="12,0,0,0" Height="32" Width="40">
                    <FontIcon Glyph="&#xE725;"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>