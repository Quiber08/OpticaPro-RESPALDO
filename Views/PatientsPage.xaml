<Page
    x:Class="OpticaPro.Views.PatientsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OpticaPro.Models"
    xmlns:views="using:OpticaPro.Views"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBackground" Color="#F8F9FA"/>
                    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
                    <SolidColorBrush x:Key="TextPrimary" Color="#1A1A1A"/>
                    <SolidColorBrush x:Key="TextSecondary" Color="#5F6368"/>
                    <SolidColorBrush x:Key="TextTertiary" Color="#9AA0A6"/>
                    <SolidColorBrush x:Key="BrandPrimary" Color="#005FB8"/>
                    <SolidColorBrush x:Key="BrandOnPrimary" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="SuccessBase" Color="#E6F4EA"/>
                    <SolidColorBrush x:Key="SuccessText" Color="#137333"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="AppBackground" Color="#202124"/>
                    <SolidColorBrush x:Key="SurfaceBrush" Color="#2D2E31"/>
                    <SolidColorBrush x:Key="BorderBrush" Color="#5F6368"/>
                    <SolidColorBrush x:Key="TextPrimary" Color="#E8EAED"/>
                    <SolidColorBrush x:Key="TextSecondary" Color="#9AA0A6"/>
                    <SolidColorBrush x:Key="TextTertiary" Color="#5F6368"/>
                    <SolidColorBrush x:Key="BrandPrimary" Color="#8AB4F8"/>
                    <SolidColorBrush x:Key="BrandOnPrimary" Color="#202124"/>
                    <SolidColorBrush x:Key="SuccessBase" Color="#0D652D"/>
                    <SolidColorBrush x:Key="SuccessText" Color="#E6F4EA"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <Style x:Key="DisplayTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="{ThemeResource TextPrimary}"/>
            </Style>

            <Style x:Key="CardTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{ThemeResource TextPrimary}"/>
                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            </Style>

            <Style x:Key="CardBodyStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{ThemeResource TextSecondary}"/>
                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            </Style>

            <Style x:Key="CardMetaStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{ThemeResource TextTertiary}"/>
            </Style>

            <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{ThemeResource BrandPrimary}"/>
                <Setter Property="Foreground" Value="{ThemeResource BrandOnPrimary}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource AppBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Padding="40,32,40,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="4" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Border Background="{ThemeResource BrandPrimary}" CornerRadius="8" Width="40" Height="40">
                        <FontIcon Glyph="&#xE779;" Foreground="White" FontSize="20"/>
                    </Border>
                    <TextBlock Text="Pacientes" Style="{StaticResource DisplayTitleStyle}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Gestión integral de historias clínicas y citas." 
                           Style="{StaticResource CardBodyStyle}" Margin="52,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                <Grid Width="300" Height="42">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.ColumnSpan="2" Background="{ThemeResource SurfaceBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1" CornerRadius="8"/>
                    <FontIcon Grid.Column="0" Glyph="&#xE721;" Margin="12,0,8,0" Foreground="{ThemeResource TextTertiary}" FontSize="14"/>
                    <AutoSuggestBox x:Name="SearchBox" Grid.Column="1" PlaceholderText="Buscar..." QueryIcon="{x:Null}" BorderThickness="0" Background="Transparent" VerticalAlignment="Center" TextChanged="SearchBox_TextChanged"/>
                </Grid>
                <Rectangle Width="1" Height="24" Fill="{ThemeResource BorderBrush}" Margin="8,0"/>
                <Button Style="{StaticResource PrimaryActionButtonStyle}" Click="AddPatient_Click">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE710;" FontSize="16"/>
                        <TextBlock Text="Nuevo Paciente"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Padding="40,0,40,20">
            <ListView x:Name="PatientsList" SelectionMode="None" IsItemClickEnabled="True" ItemClick="PatientsList_ItemClick">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="0,0,0,16"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Patient">
                        <Grid>
                            <Border CornerRadius="12" Background="#08000000" Margin="0,4,0,-4" Height="100" VerticalAlignment="Top" IsHitTestVisible="False"/>

                            <Border Background="{ThemeResource SurfaceBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1" CornerRadius="12" Padding="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" 
                                            Background="{x:Bind views:PatientsPage.GetStatusColor(Status, 'text')}" 
                                            CornerRadius="12,0,0,12"/>

                                    <Grid Grid.Column="1" Padding="24,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <PersonPicture Grid.Column="0" Initials="{x:Bind Initials}" DisplayName="{x:Bind FullName}" Width="56" Height="56" Margin="0,0,24,0"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                            <TextBlock Text="{x:Bind FullName}" Style="{StaticResource CardTitleStyle}" FontSize="17"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{x:Bind Occupation}" Style="{StaticResource CardBodyStyle}" FontSize="13"/>
                                                <TextBlock Text="•" Foreground="{ThemeResource TextTertiary}"/>
                                                <TextBlock Text="{x:Bind Dni}" Style="{StaticResource CardBodyStyle}" FontSize="13"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Spacing="6">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE717;" FontSize="10" Foreground="{ThemeResource SuccessText}"/>
                                                <TextBlock Text="{x:Bind Phone}" Style="{StaticResource CardBodyStyle}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE715;" FontSize="10" Foreground="{ThemeResource BrandPrimary}"/>
                                                <TextBlock Text="{x:Bind Email}" Style="{StaticResource CardMetaStyle}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="3" x:Name="LocationPanel" VerticalAlignment="Center" Spacing="6">
                                            <TextBlock Text="{x:Bind City}" Style="{StaticResource CardBodyStyle}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{x:Bind views:PatientsPage.FormatAge(Age)}" Style="{StaticResource CardMetaStyle}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Right" Spacing="12">
                                            <Border Background="{x:Bind views:PatientsPage.GetStatusColor(Status, 'bg')}" CornerRadius="6" Padding="12,4" HorizontalAlignment="Right">
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <Ellipse Width="6" Height="6" Fill="{x:Bind views:PatientsPage.GetStatusColor(Status, 'text')}"/>
                                                    <TextBlock Text="{x:Bind Status}" Foreground="{x:Bind views:PatientsPage.GetStatusColor(Status, 'text')}" FontWeight="Bold" FontSize="12"/>
                                                </StackPanel>
                                            </Border>

                                            <Button Background="Transparent" BorderThickness="0" Padding="8" HorizontalAlignment="Right">
                                                <FontIcon Glyph="&#xE712;" FontSize="18" Foreground="{ThemeResource TextSecondary}"/>
                                                <Button.Flyout>
                                                    <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                        <MenuFlyoutItem Text="Ver Historial" Icon="ContactInfo" Click="ViewHistory_Click" Tag="{x:Bind}"/>
                                                        <MenuFlyoutItem Text="Editar" Icon="Edit" Click="EditPatient_Click" Tag="{x:Bind}"/>
                                                        <MenuFlyoutSeparator />
                                                        <MenuFlyoutItem Text="Nueva Cita" Icon="Calendar" Click="NewAppointment_Click" Tag="{x:Bind}"/>
                                                        <MenuFlyoutSeparator />
                                                        <MenuFlyoutItem Text="Eliminar" Icon="Delete" Foreground="#C5221F" Click="DeletePatient_Click" Tag="{x:Bind}"/>
                                                    </MenuFlyout>
                                                </Button.Flyout>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="ResponsiveStates">
                                            <VisualState x:Name="WideState">
                                                <VisualState.StateTriggers>
                                                    <AdaptiveTrigger MinWindowWidth="1100"/>
                                                </VisualState.StateTriggers>
                                            </VisualState>
                                            <VisualState x:Name="NarrowState">
                                                <VisualState.StateTriggers>
                                                    <AdaptiveTrigger MinWindowWidth="0"/>
                                                </VisualState.StateTriggers>
                                                <VisualState.Setters>
                                                    <Setter Target="LocationPanel.Visibility" Value="Collapsed"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid x:Name="EmptyState" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Spacing="16" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE721;" FontSize="40" Foreground="{ThemeResource TextTertiary}"/>
                    <TextBlock Text="No encontramos coincidencias" Style="{StaticResource CardTitleStyle}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Background="{ThemeResource SurfaceBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,1,0,0" Padding="40,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="6">
                <TextBlock Text="Total:" Style="{StaticResource CardMetaStyle}"/>
                <TextBlock Text="{x:Bind views:PatientsPage.FormatInt(FilteredPatients.Count), Mode=OneWay}" Style="{StaticResource CardBodyStyle}" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>