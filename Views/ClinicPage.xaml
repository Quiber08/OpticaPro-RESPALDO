<Page
    x:Class="OpticaPro.Views.ClinicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid Padding="30" HorizontalAlignment="Stretch">
            <StackPanel Spacing="24">

                <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,0,0,10">
                    <Grid Width="64" Height="64" CornerRadius="32" Background="{ThemeResource SystemAccentColorLight2}">
                        <FontIcon Glyph="&#xE719;" FontSize="32" Foreground="{ThemeResource SystemAccentColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Datos de la Clínica" Style="{StaticResource TitleTextBlockStyle}"/>
                        <TextBlock Text="Configuración general para documentos y reportes" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="32">
                    <Border.Shadow>
                        <ThemeShadow/>
                    </Border.Shadow>

                    <StackPanel Spacing="24">
                        <TextBlock Text="Información Comercial" FontWeight="SemiBold" FontSize="16" Foreground="{ThemeResource SystemAccentColor}"/>

                        <Grid ColumnSpacing="24" RowSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox x:Name="TxtName" Grid.Row="0" Grid.Column="0" Header="Nombre Comercial" PlaceholderText="Ej. Óptica Visión Plus" HorizontalAlignment="Stretch"/>
                            <TextBox x:Name="TxtRuc" Grid.Row="0" Grid.Column="1" Header="RUC / Identificación" PlaceholderText="Ej. 1790000000001" HorizontalAlignment="Stretch"/>

                            <TextBox x:Name="TxtAddress" Grid.Row="1" Grid.Column="0" Header="Dirección Matriz" PlaceholderText="Ej. Av. Amazonas N45 y Colón" HorizontalAlignment="Stretch"/>
                            <TextBox x:Name="TxtCity" Grid.Row="1" Grid.Column="1" Header="Ciudad" PlaceholderText="Ej. Quito" HorizontalAlignment="Stretch"/>

                            <TextBox x:Name="TxtPhone" Grid.Row="2" Grid.Column="0" Header="Teléfonos" PlaceholderText="Ej. 0991234567 / 022555555" HorizontalAlignment="Stretch"/>
                            <TextBox x:Name="TxtEmail" Grid.Row="2" Grid.Column="1" Header="Email (Opcional)" PlaceholderText="contacto@tuoptica.com" HorizontalAlignment="Stretch"/>
                        </Grid>

                        <MenuFlyoutSeparator Margin="0,10"/>

                        <TextBlock Text="Personalización" FontWeight="SemiBold" FontSize="16" Foreground="{ThemeResource SystemAccentColor}"/>

                        <TextBox x:Name="TxtSlogan" Header="Slogan / Frase para Pie de Página" PlaceholderText="Ej. 'Cuidando tu salud visual desde 2026'" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Right" Margin="0,10,0,20">
                    <Button Content="Cancelar" Click="Cancel_Click" Width="120" Height="45"/>
                    <Button Click="Save_Click" Style="{StaticResource AccentButtonStyle}" Width="200" Height="45">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE74E;"/>
                            <TextBlock Text="GUARDAR CAMBIOS" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>