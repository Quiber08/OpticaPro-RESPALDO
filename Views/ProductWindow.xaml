<Window
    x:Class="OpticaPro.Views.ProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Gestión de Producto">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Padding="24,20,24,10" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
            <TextBlock x:Name="TitleText" Text="Nuevo Producto" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Completa la ficha técnica del artículo." Foreground="Gray"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <Grid Padding="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Spacing="20" Padding="0,0,24,0">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE8EC;" Foreground="#0078D7" FontSize="18"/>
                        <TextBlock Text="Identificación" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>

                    <TextBox x:Name="TxtCode" Header="Código (SKU)" PlaceholderText="Ej: RB-3025"/>
                    <TextBox x:Name="TxtName" Header="Nombre / Modelo" PlaceholderText="Ej: RayBan Aviator"/>
                    <TextBox x:Name="TxtBrand" Header="Marca" PlaceholderText="Ej: RayBan"/>

                    <ComboBox x:Name="CmbCategory" Header="Categoría" HorizontalAlignment="Stretch" SelectedIndex="0">
                        <ComboBoxItem Content="Armazones"/>
                        <ComboBoxItem Content="Lunas"/>
                        <ComboBoxItem Content="Accesorios"/>
                        <ComboBoxItem Content="Lentes de Contacto"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Spacing="20" Padding="24,0,0,0" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1,0,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE8C7;" Foreground="LimeGreen" FontSize="18"/>
                        <TextBlock Text="Comercial &amp; Stock" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>

                    <Grid ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <NumberBox x:Name="NbCost" Header="Costo Compra ($)" PlaceholderText="0.00" SpinButtonPlacementMode="Compact"/>
                        <NumberBox x:Name="NbPrice" Grid.Column="1" Header="Precio Venta ($)" PlaceholderText="0.00" SpinButtonPlacementMode="Compact"/>
                    </Grid>

                    <MenuFlyoutSeparator/>

                    <NumberBox x:Name="NbStock" Header="Stock Disponible" Value="0" SpinButtonPlacementMode="Inline" Width="150" HorizontalAlignment="Left"/>

                    <InfoBar IsOpen="True" Severity="Informational" Message="El costo de compra es privado y no se muestra en las facturas." IsClosable="False"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Border Grid.Row="2" Padding="24" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="16">
                <Button Content="Cancelar" Click="Cancel_Click" Width="100"/>
                <Button Content="Guardar Producto" Click="Save_Click" Style="{StaticResource AccentButtonStyle}" Width="150"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>