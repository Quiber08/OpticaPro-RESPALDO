<Page
    x:Class="OpticaPro.Views.InventoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OpticaPro.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">

            <StackPanel Spacing="4">
                <TextBlock Text="Inventario General" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="Gestiona el stock de armazones, lunas y accesorios." Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Padding="16" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE7F5;" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="Total Ítems" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtTotalItems" Text="0" FontSize="28" FontWeight="Bold" Foreground="#0078D7"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Padding="16" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE7BA;" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="Stock Bajo" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtLowStock" Text="0" FontSize="28" FontWeight="Bold" Foreground="OrangeRed"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <AutoSuggestBox x:Name="SearchBox" PlaceholderText="Buscar por código, marca o nombre..." QueryIcon="Find" Width="300" TextChanged="SearchBox_TextChanged"/>
                    <ComboBox x:Name="CmbCategoryFilter" PlaceholderText="Categoría" MinWidth="150" SelectionChanged="CmbCategoryFilter_SelectionChanged">
                        <ComboBoxItem Content="Todos"/>
                        <ComboBoxItem Content="Armazones"/>
                        <ComboBoxItem Content="Lunas"/>
                        <ComboBoxItem Content="Accesorios"/>
                        <ComboBoxItem Content="Lentes de Contacto"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <Button Click="BulkAdd_Click" Background="Transparent" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE81E;"/>
                            <TextBlock Text="Entrada en Lote"/>
                        </StackPanel>
                    </Button>

                    <Button Click="AddProduct_Click" Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;"/>
                            <TextBlock Text="Nuevo Producto"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <Border CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Padding="16,12" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="CÓDIGO" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="PRODUCTO" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="CATEGORÍA" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="3" Text="PRECIO" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="4" Text="STOCK" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="5" Text="ACCIONES" FontWeight="Bold" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" HorizontalAlignment="Center"/>
                    </Grid>

                    <StackPanel x:Name="EmptyState" Grid.Row="1" HorizontalAlignment="Center" Padding="40" Visibility="Collapsed">
                        <FontIcon Glyph="&#xE773;" FontSize="40" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,0,10"/>
                        <TextBlock Text="No se encontraron productos." Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <ListView x:Name="InventoryList" Grid.Row="1" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Product">
                                <Grid Padding="0,12" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{x:Bind Code}" VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{x:Bind Brand}" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <Border Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4" Padding="8,2">
                                        <TextBlock Text="{x:Bind Category}" FontSize="11"/>
                                    </Border>

                                    <TextBlock Grid.Column="3" Text="{x:Bind Price}" FontWeight="SemiBold" VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                        <FontIcon Glyph="&#xE735;" FontSize="12" Foreground="#0078D7"/>
                                        <TextBlock Text="{x:Bind Stock}" FontSize="12"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                                        <Button Click="EditProduct_Click" Tag="{x:Bind}" ToolTipService.ToolTip="Editar" Padding="6" Background="Transparent" BorderThickness="0">
                                            <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                        </Button>

                                        <Button Click="DeleteProduct_Click" Tag="{x:Bind}" ToolTipService.ToolTip="Eliminar" Padding="6" Background="Transparent" BorderThickness="0">
                                            <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="IndianRed"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>