<Window
    x:Class="OpticaPro.Views.AddAppointmentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OpticaPro.Models"
    mc:Ignorable="d"
    Title="Programaci&#243;n de Cita - OpticaPro">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Width="48" Height="48" 
                        CornerRadius="12" 
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        Margin="0,0,16,0">
                    <FontIcon Glyph="&#xE787;" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Gesti&#243;n de Cita" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock Text="Ingrese los detalles de la consulta m&#233;dica" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,0,20">
            <StackPanel Padding="32,24" Spacing="24" MaxWidth="600" HorizontalAlignment="Stretch">

                <InfoBar x:Name="InfoStatus" 
                         IsOpen="False" 
                         Severity="Informational" 
                         Message="Listo para ingresar datos"
                         IsClosable="True" />

                <StackPanel Spacing="10">
                    <TextBlock Text="Informaci&#243;n del Paciente" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="16">

                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE77B;" FontSize="14" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                    <TextBlock Text="Seleccionar Paciente" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <TextBlock Text="*" Foreground="Red" FontSize="12" VerticalAlignment="Top"/>
                                </StackPanel>

                                <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="TxtPatientName" 
                                             PlaceholderText="Click en la lupa para buscar..." 
                                             IsReadOnly="True" 
                                             HorizontalAlignment="Stretch"/>

                                    <Button Grid.Column="1" Click="BtnSearchPatient_Click" ToolTipService.ToolTip="Buscar paciente">
                                        <FontIcon Glyph="&#xE721;" FontSize="16"/>
                                    </Button>
                                </Grid>
                            </StackPanel>

                            <StackPanel x:Name="PatientDetailPanel" Visibility="Collapsed" Spacing="4">
                                <TextBlock x:Name="LblPatientPhone" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                                <TextBlock x:Name="LblPatientCity" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <MenuFlyoutSeparator/>

                <StackPanel Spacing="10">
                    <TextBlock Text="Fecha y Hora" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <Grid ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE787;" FontSize="14" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                <TextBlock Text="Fecha" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="*" Foreground="Red"/>
                            </StackPanel>
                            <DatePicker x:Name="PickDate" HorizontalAlignment="Stretch"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE823;" FontSize="14" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                <TextBlock Text="Hora" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="*" Foreground="Red"/>
                            </StackPanel>
                            <TimePicker x:Name="PickTime" HorizontalAlignment="Stretch" ClockIdentifier="24HourClock" MinuteIncrement="15"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Spacing="10">
                    <TextBlock Text="Detalles" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE90A;" FontSize="14" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Motivo de la Consulta" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="*" Foreground="Red"/>
                        </StackPanel>
                        <TextBox x:Name="TxtReason" 
                                 PlaceholderText="Describa brevemente (ej. Examen visual, Retiro de lentes...)" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 Height="100" 
                                 CornerRadius="8"
                                 BorderThickness="1"/>
                        <TextBlock Text="M&#225;ximo 200 caracteres" FontSize="11" Foreground="Gray" HorizontalAlignment="Right"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE946;" FontSize="14" Foreground="Gray"/>
                    <TextBlock Text="Los campos con (*) son obligatorios." FontSize="12" Foreground="Gray"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <Button x:Name="BtnCancel" 
                            Content="Cancelar" 
                            Click="BtnCancel_Click" 
                            MinWidth="100"
                            Padding="12,8"/>

                    <Button x:Name="BtnSave" 
                            Content="Confirmar Cita" 
                            Style="{StaticResource AccentButtonStyle}" 
                            Click="BtnSave_Click" 
                            MinWidth="140"
                            Padding="12,8">
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Guardar la cita en la base de datos"/>
                        </ToolTipService.ToolTip>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>