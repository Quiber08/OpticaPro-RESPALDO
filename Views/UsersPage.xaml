<Page
    x:Class="OpticaPro.Views.UsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OpticaPro.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="40" MaxWidth="1200" HorizontalAlignment="Left" Spacing="24">

            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,0,0,10">
                    <Button Click="Back_Click" Style="{StaticResource NavigationBackButtonNormalStyle}"/>
                    <TextBlock Text="Usuarios y Permisos" Style="{StaticResource TitleTextBlockStyle}"/>
                </StackPanel>
                <TextBlock Text="Gestiona el acceso del personal al sistema." Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="48,0,0,0"/>
            </StackPanel>

            <Button Click="AddUser_Click" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Left" Margin="48,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;"/>
                    <TextBlock Text="Nuevo Usuario"/>
                </StackPanel>
            </Button>

            <ListView x:Name="UsersList" SelectionMode="None" Margin="0,10,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:AppUser">
                        <Border Margin="0,0,0,12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                                CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <PersonPicture Initials="{x:Bind Initials}" DisplayName="{x:Bind FullName}" Height="48" Margin="0,0,16,0"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind FullName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind Username}" FontSize="12" Foreground="Gray"/>
                                </StackPanel>

                                <Border Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="{x:Bind Role}" FontSize="12"/>
                                </Border>

                                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="8">
                                    <Button Click="EditUser_Click" Tag="{x:Bind}" ToolTipService.ToolTip="Editar Usuario" Padding="8" Background="Transparent" BorderThickness="0">
                                        <FontIcon Glyph="&#xE70F;" FontSize="16" Foreground="#0078D7"/>
                                    </Button>

                                    <Button Click="DeleteUser_Click" Tag="{x:Bind}" ToolTipService.ToolTip="Eliminar Usuario" Padding="8" Background="Transparent" BorderThickness="0">
                                        <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="IndianRed"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>
</Page>