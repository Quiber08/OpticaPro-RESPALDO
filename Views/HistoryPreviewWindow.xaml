<Window
    x:Class="OpticaPro.Views.HistoryPreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Vista Previa - Historia Clínica">

    <Grid Background="#F3F3F3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Padding="15" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Button Click="Print_Click" Background="#0078D4" Foreground="White" CornerRadius="4">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE749;"/>
                    <TextBlock Text="Imprimir / Guardar PDF"/>
                </StackPanel>
            </Button>
            <Button Click="Close_Click" Content="Cerrar"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Padding="20">
            <Border x:Name="PrintArea" Width="793" MinHeight="1122" Background="White" Padding="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,20" BorderBrush="#CCCCCC" BorderThickness="1">
                <StackPanel Spacing="10">

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="RunClinicName" Text="OPTICA PRO" FontSize="22" FontWeight="Bold" Foreground="#003366"/>
                            <TextBlock x:Name="RunClinicAddress" Text="Dirección de la clínica" FontSize="12" Foreground="Gray"/>
                            <TextBlock x:Name="RunClinicPhone" Text="Telf: 099999999" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="HISTORIA CLÍNICA" FontSize="18" FontWeight="SemiBold" Foreground="Black" HorizontalAlignment="Right"/>
                            <TextBlock x:Name="RunDate" Text="Fecha: 12/12/2025" FontSize="12" Foreground="Gray" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>

                    <Rectangle Height="2" Fill="#003366" Margin="0,0,0,20"/>

                    <TextBlock Text="DATOS DEL PACIENTE" FontWeight="Bold" Foreground="#003366" Margin="0,0,0,5"/>
                    <Grid Background="#F9F9F9" Padding="10" CornerRadius="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Paciente:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock x:Name="RunPatientName" Grid.Column="1" Text="JUAN PEREZ" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Text="Edad / DNI:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="5">
                            <TextBlock x:Name="RunPatientAge" Text="30 años"/>
                            <TextBlock Text="|"/>
                            <TextBlock x:Name="RunPatientDni" Text="1720000000"/>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Text="Teléfono:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock x:Name="RunPatientPhone" Grid.Row="2" Grid.Column="1" Text="099123456"/>
                    </Grid>

                    <TextBlock Text="REGISTRO DE CONSULTAS Y EXÁMENES" FontWeight="Bold" Foreground="#003366" Margin="0,20,0,5"/>
                    <StackPanel x:Name="PanelExams" Spacing="0">
                    </StackPanel>

                    <TextBlock Text="HISTORIAL DE PEDIDOS Y GAFAS" FontWeight="Bold" Foreground="#003366" Margin="0,20,0,5"/>
                    <StackPanel x:Name="PanelOrders" Spacing="0">
                    </StackPanel>

                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>