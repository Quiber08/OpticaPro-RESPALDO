<Page
    x:Class="OpticaPro.Views.AddPatientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OpticaPro.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="SectionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Width="64" Height="64" CornerRadius="32" Background="{ThemeResource AccentFillColorDefaultBrush}" Margin="0,0,24,0">
                    <FontIcon Glyph="&#xE779;" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="PageTitle" Text="Registrar Nuevo Paciente" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock x:Name="PageSubtitle" Text="Complete la informaci&#243;n cl&#237;nica y personal requerida." 
                               Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,0,24">
            <StackPanel Padding="32,24" HorizontalAlignment="Stretch">

                <InfoBar x:Name="FormInfoBar" 
                         IsOpen="False" 
                         Severity="Informational" 
                         Margin="0,0,0,24"
                         IsClosable="True"/>

                <TextBlock Text="Datos Personales" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource SectionCardStyle}">
                    <Grid RowSpacing="20" ColumnSpacing="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="TxtFullName" Header="Nombre Completo *" PlaceholderText="Ej. Juan P&#233;rez" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                            <TextBox.Description>Nombre legal del paciente para facturaci&#243;n.</TextBox.Description>
                        </TextBox>

                        <TextBox x:Name="TxtDni" 
                                 Header="C&#233;dula / DNI *" 
                                 PlaceholderText="Ingrese 10 d&#237;gitos" 
                                 MaxLength="10"
                                 BeforeTextChanging="TxtNumeric_BeforeTextChanging"
                                 Grid.Row="1" Grid.Column="0">
                            <TextBox.Description>Documento &#250;nico de identidad.</TextBox.Description>
                        </TextBox>

                        <NumberBox x:Name="NumAge" Header="Edad" PlaceholderText="A&#241;os" Grid.Row="1" Grid.Column="1" SpinButtonPlacementMode="Inline" Minimum="0" Maximum="120"/>
                    </Grid>
                </Border>

                <TextBlock Text="Informaci&#243;n de Contacto" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource SectionCardStyle}">
                    <Grid RowSpacing="20" ColumnSpacing="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="TxtPhone" 
                                 Header="Tel&#233;fono M&#243;vil *" 
                                 PlaceholderText="09XXXXXXXX" 
                                 MaxLength="10"
                                 BeforeTextChanging="TxtNumeric_BeforeTextChanging"
                                 InputScope="TelephoneNumber" 
                                 Grid.Row="0" Grid.Column="0"/>

                        <TextBox x:Name="TxtEmail" Header="Correo Electr&#243;nico" PlaceholderText="nombre@ejemplo.com" InputScope="EmailSmtpAddress" Grid.Row="0" Grid.Column="1"/>

                        <TextBox x:Name="TxtAddress" Header="Direcci&#243;n Domiciliaria" PlaceholderText="Calle, N&#250;mero, Sector" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
                    </Grid>
                </Border>

                <TextBlock Text="Informaci&#243;n Adicional" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource SectionCardStyle}">
                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="TxtOccupation" Header="Ocupaci&#243;n / Profesi&#243;n" PlaceholderText="Ej. Estudiante, Ingeniero..."/>

                        <TextBox x:Name="TxtCity" Header="Ciudad de Residencia" PlaceholderText="Ej. Guayaquil" Grid.Column="1"/>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" 
                Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="32,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE946;" FontSize="16" Foreground="{ThemeResource SystemControlErrorTextForegroundBrush}"/>
                    <TextBlock Text="Los campos marcados con (*) son obligatorios." FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                    <Button x:Name="BtnCancel" Content="Cancelar" Click="BtnCancel_Click" MinWidth="120"/>
                    <Button x:Name="BtnSave" Content="Guardar Paciente" Style="{StaticResource AccentButtonStyle}" Click="BtnSave_Click" MinWidth="160">
                        <ToolTipService.ToolTip>Guardar cambios en la base de datos</ToolTipService.ToolTip>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>