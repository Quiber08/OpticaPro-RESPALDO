<Window
    x:Class="OpticaPro.Views.BulkInventoryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:OpticaPro.Views"
    mc:Ignorable="d"
    Title="Carga Masiva de Inventario - OpticaPro">

    <Grid Padding="24" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Carga Masiva de Productos" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Ingresa costos y precios." Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <Border Grid.Row="1" CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="CÓDIGO" FontWeight="Bold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="NOMBRE" FontWeight="Bold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Grid.Column="2" Text="CATEGORÍA" FontWeight="Bold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Grid.Column="3" Text="COSTO ($)" FontWeight="Bold" FontSize="12" Foreground="IndianRed"/>
                    <TextBlock Grid.Column="4" Text="PRECIO ($)" FontWeight="Bold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Grid.Column="5" Text="STOCK" FontWeight="Bold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </Grid>

                <ListView Grid.Row="1" x:Name="BulkList" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:BulkProduct">
                            <Grid Padding="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="0.8*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{x:Bind Code, Mode=TwoWay}" PlaceholderText="SKU" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1" Text="{x:Bind Name, Mode=TwoWay}" PlaceholderText="Producto" Margin="0,0,8,0"/>

                                <ComboBox Grid.Column="2" SelectedIndex="{x:Bind CategoryIndex, Mode=TwoWay}" HorizontalAlignment="Stretch" Margin="0,0,8,0">
                                    <ComboBoxItem Content="Armazones"/>
                                    <ComboBoxItem Content="Lunas"/>
                                    <ComboBoxItem Content="Accesorios"/>
                                    <ComboBoxItem Content="Lentes de Contacto"/>
                                </ComboBox>

                                <TextBox Grid.Column="3" Text="{x:Bind Cost, Mode=TwoWay}" PlaceholderText="0.00" Margin="0,0,8,0"/>

                                <TextBox Grid.Column="4" Text="{x:Bind Price, Mode=TwoWay}" PlaceholderText="0.00" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="5" Text="{x:Bind Stock, Mode=TwoWay}" PlaceholderText="0" Margin="0,0,8,0"/>

                                <Button Grid.Column="6" Click="RemoveRow_Click" Background="Transparent" BorderThickness="0">
                                    <FontIcon Glyph="&#xE74D;" Foreground="IndianRed"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Click="AddRow_Click" Style="{StaticResource AccentButtonStyle}" Background="Transparent" BorderBrush="{ThemeResource SystemAccentColor}" BorderThickness="1" Foreground="{ThemeResource SystemAccentColor}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;"/>
                    <TextBlock Text="Agregar fila"/>
                </StackPanel>
            </Button>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="16">
                <Button Content="Cancelar" Click="Cancel_Click" Width="100"/>
                <Button Click="SaveAll_Click" Style="{StaticResource AccentButtonStyle}" Background="LimeGreen">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE74E;"/>
                        <TextBlock Text="Procesar Entrada"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>