<Page
    x:Class="OpticaPro.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OpticaPro.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24" HorizontalAlignment="Stretch">

            <StackPanel Spacing="4">
                <TextBlock Text="Panel de Control" Style="{StaticResource PageTitleStyle}"/>
                <TextBlock x:Name="TxtWelcome" 
                           Text="Sistema de Gestión OpticaPro" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <Grid ColumnSpacing="16" RowSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Padding="16" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <StackPanel Spacing="8">
                        <Grid>
                            <TextBlock Text="Pacientes Hoy" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                            <FontIcon Glyph="&#xE716;" HorizontalAlignment="Right" Foreground="{StaticResource OpticsGradientBrush}" FontSize="20"/>
                        </Grid>
                        <TextBlock x:Name="TxtPatientsCount" Text="0" FontSize="28" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtPatientsTrend" Text="Sin actividad" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Padding="16" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <StackPanel Spacing="8">
                        <Grid>
                            <TextBlock Text="Ingresos Mes" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                            <FontIcon Glyph="&#xE8D4;" HorizontalAlignment="Right" Foreground="{StaticResource OpticsGradientBrush}" FontSize="20"/>
                        </Grid>
                        <TextBlock x:Name="TxtIncome" Text="$0.00" FontSize="28" FontWeight="SemiBold"/>
                        <TextBlock Text="Acumulado mensual" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Padding="16" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <StackPanel Spacing="8">
                        <Grid>
                            <TextBlock Text="Recetas Pendientes" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                            <FontIcon Glyph="&#xE95E;" HorizontalAlignment="Right" Foreground="{StaticResource OpticsGradientBrush}" FontSize="20"/>
                        </Grid>
                        <TextBlock x:Name="TxtPrescriptions" Text="0" FontSize="28" FontWeight="SemiBold"/>
                        <TextBlock Text="En proceso de taller" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="12">
                    <TextBlock Text="Pacientes Recientes" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel x:Name="EmptyRecentState" Visibility="Visible" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <FontIcon Glyph="&#xE773;" FontSize="48" Foreground="{StaticResource OpticsGradientBrush}" Opacity="0.5"/>
                        <TextBlock Text="No hay actividad reciente." Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>

                    <ListView x:Name="RecentPatientsList" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Patient">
                                <Border CornerRadius="8" Padding="12" Margin="0,0,0,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <PersonPicture Height="40" Initials="{x:Bind Initials}" DisplayName="{x:Bind FullName}"/>
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind FullName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{x:Bind LastVisit}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                        <Border Grid.Column="2" Background="{x:Bind StatusBackgroundBrush}" CornerRadius="4" Padding="8,4">
                                            <TextBlock Text="{x:Bind Status}" FontSize="11" Foreground="{x:Bind StatusTextBrush}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <StackPanel Grid.Column="1" Spacing="12">
                    <TextBlock Text="Acciones Rápidas" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <Button Click="NewPatient_Click" HorizontalAlignment="Stretch" Height="50" Style="{StaticResource AccentButtonStyle}" CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;"/>
                            <TextBlock Text="Nuevo Paciente"/>
                        </StackPanel>
                    </Button>

                    <Button Click="NewConsult_Click" HorizontalAlignment="Stretch" Height="50" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE90C;" Foreground="{StaticResource OpticsBrandBrush}"/>
                            <TextBlock Text="Nueva Consulta"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <StackPanel Spacing="12" Margin="0,12,0,0">
                <TextBlock Text="Balance Financiero (Mes Actual)" Style="{StaticResource SubtitleTextBlockStyle}"/>

                <Grid ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="8" Padding="24" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                        <Grid RowSpacing="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8D4;" Foreground="LimeGreen" FontSize="20"/>
                                <TextBlock Text="Total Ingresos" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="16"/>
                            </StackPanel>
                            <TextBlock x:Name="TxtBalanceIncome" Grid.Row="1" Text="$0.00" FontSize="40" FontWeight="Bold" Foreground="LimeGreen"/>
                            <ProgressBar Grid.Row="2" Value="100" Foreground="LimeGreen" Height="6"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" CornerRadius="8" Padding="24" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                        <Grid RowSpacing="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE9D2;" Foreground="OrangeRed" FontSize="20"/>
                                <TextBlock Text="Gastos Operativos" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="16"/>
                            </StackPanel>
                            <TextBlock x:Name="TxtExpenses" Grid.Row="1" Text="$0.00" FontSize="40" FontWeight="Bold" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                            <ProgressBar Grid.Row="2" Value="100" Foreground="OrangeRed" Height="6"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2" CornerRadius="8" Padding="24" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                        <Grid RowSpacing="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE719;" Foreground="#2196F3" FontSize="20"/>
                                <TextBlock Text="Ganancia Neta" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="16"/>
                            </StackPanel>
                            <TextBlock x:Name="TxtNetProfit" Grid.Row="1" Text="$0.00" FontSize="40" FontWeight="Bold" Foreground="#2196F3"/>
                            <ProgressBar Grid.Row="2" Value="100" Foreground="#2196F3" Height="6"/>
                        </Grid>
                    </Border>

                </Grid>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>