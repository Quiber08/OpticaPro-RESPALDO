<Window
    x:Class="OpticaPro.Views.CreateOrderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OpticaPro.Models"
    mc:Ignorable="d"
    Title="Nueva Orden de Trabajo">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.Resources>
            <DataTemplate x:Key="ProductSearchTemplate" x:DataType="models:Product">
                <Grid Padding="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{x:Bind Name}" FontWeight="Bold" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="{x:Bind Brand}" Foreground="Gray" FontSize="12"/>
                            <TextBlock Text="•" Foreground="Gray" FontSize="12"/>
                            <TextBlock Text="{x:Bind Category}" Foreground="Gray" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="6,2">
                            <TextBlock Text="{x:Bind Code}" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                        <TextBlock HorizontalAlignment="Right" FontSize="11" Margin="0,4,0,0" Foreground="DimGray">
                            <Run Text="Stock: "/>
                            <Run Text="{x:Bind Stock}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="24,20,24,10" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="Orden de Trabajo" Style="{StaticResource TitleTextBlockStyle}"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE77B;" FontSize="14" Foreground="Gray"/>
                    <TextBlock x:Name="PatientNameTitle" Text="Cliente: Cargando..." Style="{StaticResource BodyTextBlockStyle}" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="24">
            <Grid ColumnSpacing="30" RowSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="350"/>
                    <ColumnDefinition Width="*" MinWidth="350"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="20">

                    <StackPanel Spacing="10" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="16" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE95E;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                            <TextBlock Text="Receta / Medida" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="ExamTxt" 
                                     Header="Examen del Paciente" 
                                     PlaceholderText="Seleccionar del historial..." 
                                     IsReadOnly="True" 
                                     Grid.Column="0"/>

                            <Button x:Name="SearchExamBtn" 
                                    Grid.Column="1" 
                                    VerticalAlignment="Bottom" 
                                    Click="SearchExamBtn_Click"
                                    ToolTipService.ToolTip="Ver Historial de Exámenes">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <FontIcon Glyph="&#xE721;"/>
                                    <TextBlock Text="Buscar"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid x:Name="ExamPreviewGrid" Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}" CornerRadius="6" Padding="12" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="1" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="1" Text="ESF" FontSize="11" Foreground="Gray" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="CIL" FontSize="11" Foreground="Gray" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="EJE" FontSize="11" Foreground="Gray" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="ADD" FontSize="11" Foreground="Gray" HorizontalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="OD" FontWeight="Bold" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                            <TextBlock x:Name="TxtSphOD" Grid.Row="1" Grid.Column="1" Text="0.00" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBlock x:Name="TxtCylOD" Grid.Row="1" Grid.Column="2" Text="0.00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtAxisOD" Grid.Row="1" Grid.Column="3" Text="0°" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtAddOD" Grid.Row="1" Grid.Column="4" Text="+0.00" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>

                            <Rectangle Grid.Row="2" Grid.ColumnSpan="5" Height="1" Fill="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,4" Opacity="0.3"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="OI" FontWeight="Bold" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                            <TextBlock x:Name="TxtSphOI" Grid.Row="3" Grid.Column="1" Text="0.00" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBlock x:Name="TxtCylOI" Grid.Row="3" Grid.Column="2" Text="0.00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtAxisOI" Grid.Row="3" Grid.Column="3" Text="0°" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtAddOI" Grid.Row="3" Grid.Column="4" Text="+0.00" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                        </Grid>

                        <TextBlock x:Name="NoExamMessage" Text="Selecciona un examen para ver la medida." FontSize="12" Foreground="Gray" Visibility="Visible" Margin="5,0,0,0"/>
                    </StackPanel>

                    <StackPanel Spacing="15" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="16" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE812;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                            <TextBlock Text="Especificaciones" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="FrameTxt" 
                                     Header="Armazón / Montura" 
                                     PlaceholderText="Escribe manual o busca..." 
                                     Grid.Column="0"/>

                            <Button x:Name="SearchFrameBtn" 
                                    Grid.Column="1" 
                                    VerticalAlignment="Bottom" 
                                    Click="SearchFrameBtn_Click"
                                    ToolTipService.ToolTip="Buscar en Inventario">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <FontIcon Glyph="&#xE721;"/>
                                    <TextBlock Text="Buscar"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <TextBox x:Name="LensTxt" Header="Lunas / Cristales" PlaceholderText="Ej: Policarbonato Antireflejo BlueBlock" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Column="1" Spacing="20">
                    <StackPanel Spacing="15" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="16" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xEC05;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                            <TextBlock Text="Logística" FontWeight="SemiBold"/>
                        </StackPanel>

                        <Grid ColumnSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="LabTxt" Header="Laboratorio Asignado" PlaceholderText="Ej: Lab. Central"/>
                            <TextBox x:Name="DateTxt" Grid.Column="1" Header="Fecha Entrega" PlaceholderText="dd/mm/yyyy"/>
                        </Grid>

                        <TextBox x:Name="LabCostTxt" Header="Costo Interno (Laboratorio)" PlaceholderText="0.00" InputScope="Number" Description="Este valor no lo ve el cliente."/>
                    </StackPanel>

                    <StackPanel Spacing="15" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="16" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE8C7;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                            <TextBlock Text="Facturación y Pagos" FontWeight="SemiBold"/>
                        </StackPanel>

                        <ToggleSwitch x:Name="AccumulativePlanSwitch" Header="Plan Acumulativo" OffContent="Pago Normal" OnContent="Activado" Toggled="AccumulativePlanSwitch_Toggled"/>

                        <Grid ColumnSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TotalTxt" Header="Total Venta ($)" InputScope="Number" TextChanged="CalculateBalance_TextChanged"/>
                            <TextBox x:Name="DepositTxt" Grid.Column="1" Header="Abono Inicial ($)" InputScope="Number" TextChanged="CalculateBalance_TextChanged"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,5,0,0">
                            <TextBlock Text="Saldo Pendiente:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock x:Name="BalanceLabel" Text="$ 0.00" FontSize="18" Foreground="IndianRed" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Grid Grid.Row="2" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" Padding="24,16" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                <Button Content="Cancelar" Click="Cancel_Click" Width="100"/>
                <Button Content="Guardar Orden" Click="SaveOrder_Click" Style="{StaticResource AccentButtonStyle}" Width="140">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Enter"/>
                    </Button.KeyboardAccelerators>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>