<Page
    x:Class="OpticaPro.Views.FinancialReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OpticaPro.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="32" Spacing="24">

            <StackPanel>
                <TextBlock Text="Reportes Financieros" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="Analiza tus ingresos, costos y utilidad neta por periodos." Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="16">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <StackPanel>
                        <TextBlock Text="Tipo de Reporte" FontSize="12" Foreground="Gray" Margin="0,0,0,4"/>
                        <ComboBox x:Name="CmbPeriodo" SelectionChanged="CmbPeriodo_SelectionChanged" MinWidth="150" SelectedIndex="2">
                            <ComboBoxItem Content="Diario"/>
                            <ComboBoxItem Content="Semanal"/>
                            <ComboBoxItem Content="Mensual"/>
                            <ComboBoxItem Content="Anual"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Seleccionar Fecha" FontSize="12" Foreground="Gray" Margin="0,0,0,4"/>
                        <CalendarDatePicker x:Name="PickerFecha" DateChanged="PickerFecha_DateChanged" Width="200" HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Bottom">
                        <Button Content="Generar Reporte" Click="Generate_Click" Style="{StaticResource AccentButtonStyle}"/>

                        <Button Click="PrintPdf_Click" ToolTipService.ToolTip="Guardar como PDF">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE749;"/>
                                <TextBlock Text="Guardar PDF"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8C7;" Foreground="LimeGreen"/>
                            <TextBlock Text="Ingresos (Ventas)" Foreground="Gray"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtIngresos" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="LimeGreen"/>
                        <TextBlock Text="Total cobrado en pedidos" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8D4;" Foreground="OrangeRed"/>
                            <TextBlock Text="Costos (Lab + Insumos)" Foreground="Gray"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtGastos" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="OrangeRed"/>
                        <TextBlock Text="Pagos a laboratorios" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE719;" Foreground="#0078D7"/>
                            <TextBlock Text="Utilidad Neta" Foreground="Gray"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtUtilidad" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="#0078D7"/>
                        <TextBlock Text="Ganancia real del periodo" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </Grid>

            <StackPanel Spacing="10">
                <TextBlock Text="Desglose de Movimientos" Style="{StaticResource SubtitleTextBlockStyle}"/>

                <ListView x:Name="ReportList" SelectionMode="None">
                    <ListView.Header>
                        <Grid Padding="12" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Fecha" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Detalle / Cliente" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Text="Tipo" FontWeight="Bold"/>
                            <TextBlock Grid.Column="3" Text="Ingreso" FontWeight="Bold" Foreground="Green"/>
                            <TextBlock Grid.Column="4" Text="Gasto" FontWeight="Bold" Foreground="Red"/>
                            <TextBlock Grid.Column="5" Text="Neto" FontWeight="Bold"/>
                        </Grid>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0,12" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Fecha}" VerticalAlignment="Center" Foreground="Gray"/>
                                <TextBlock Grid.Column="1" Text="{Binding Detalle}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="{Binding Tipo}" VerticalAlignment="Center" Foreground="Gray" FontSize="12"/>

                                <TextBlock Grid.Column="3" Text="{Binding IngresoDisplay}" VerticalAlignment="Center" Foreground="Green"/>
                                <TextBlock Grid.Column="4" Text="{Binding GastoDisplay}" VerticalAlignment="Center" Foreground="IndianRed"/>
                                <TextBlock Grid.Column="5" Text="{Binding NetoDisplay}" VerticalAlignment="Center" FontWeight="Bold"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock x:Name="EmptyReportState" Text="No hay movimientos en este periodo." HorizontalAlignment="Center" Foreground="Gray" Margin="0,20,0,0" Visibility="Collapsed"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>